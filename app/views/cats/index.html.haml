%h1= t('.title')

%table.table.table-striped
  %thead
    %tr
      %th= Cat.human_attribute_name :name
      %th
      %th
      %th

  %tbody
    - @cats.each do |cat|
      %tr
        %td= cat.name
        %td= link_to t('.logs'), cat_logs_path(cat)
        %td= link_to 'Edit', edit_cat_path(cat)
        %td= link_to 'Destroy', cat, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Cat', new_cat_path
